<!DOCTYPE html>
<html lang="en">
<head>
  <title>Administrar Servicios</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <nav>
      <a href="/admin">Inicio</a>
      <a href="/admin/services">Servicios</a>
      <a href="/admin/galeria">Galeria</a>
      <a href="/admin/contact">Contacto</a>
      <a href="/logout">Serrar Sesion</a>
    </nav>
  </header>
  <h1>Administrar Servicios</h1>
  <form action="/admin/services/add" method="post">
    <label for="title">Título:</label>
    <input type="text" id="title" name="title" required>
    
    <label for="description">Descripción:</label>
    <textarea id="description" name="description" required></textarea>
    
    <label for="price">Precio:</label>
    <input type="number" id="price" name="price" required>
    
    <label for="image">URL de la Imagen:</label>
    <input type="text" id="image" name="image" required>
    
    <button type="submit">Añadir Servicio</button>
  </form>

  <h2>Servicios Actuales</h2>
  <ul>
    <% services.forEach(service => { %>
      <li>
        <strong><%= service.title %></strong> - $<%= service.price %>
        <form action="/admin/services/delete/<%= service._id %>" method="post" style="display: inline;">
          <button type="submit">Eliminar</button>
        </form>
      </li>
    <% }); %>
  </ul>
</body>
</html>
