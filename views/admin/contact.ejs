<!DOCTYPE html>
<html lang="en">
<head>
  <title>Administrar de Contactos</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <nav>
      <a href="/admin">Inicio</a>
      <a href="/admin/services">Servicios</a>
      <a href="/admin/galeria">Galeria</a>
      <a href="/admin/contact">Contacto</a>
      <a href="/logout">Serrar Sesion</a>
    </nav>
  </header>
  <h1>Administrar de Contactos</h1>
  <form action="/admin/contact/add" method="post">
    <label for="title">Name:</label>
    <input type="text" id="name" name="name" required>
    
    <label for="description">Email:</label>
    <input type="text" id="email" name="email" required>
    
    <label for="price">Telefono:</label>
    <input type="text" id="telefono" name="telefono" required>
    
    <button type="submit">AÃ±adir Contacto</button>
  </form>

  <h2>Contactos</h2>
  <ul>
    <% contact.forEach(contact => { %>
      <li>
        <strong><%= contact.name %></strong> - <%= contact.email %></strong> - <%= contact.telefono %>
        <form action="/admin/contact/delete/<%= contact._id %>" method="post" style="display: inline;">
          <button type="submit">Eliminar</button>
        </form>
      </li>
    <% }); %>
  </ul>
</body>
</html>
